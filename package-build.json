{
  "name": "dukafiti-build",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && vite build",
    "build:server": "esbuild server/index.ts --bundle --platform=node --outfile=build/index.js --external:@supabase/supabase-js --external:express --external:express-session --format=esm --target=node20",
    "start": "node build/index.js",
    "dev": "NODE_ENV=development tsx server/index.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "esbuild": "^0.19.8",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  }
}